<div class="container m-5">
<h3>新規会員登録</h3>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class="table table-borderless">
  <thead>
      <th></th>
      <th></th>
      <th></th>
  </thead>
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= f.label :first_name, "(姓)" %> <%= f.text_field :first_name, autofocus: true, placeholder: "令和", class:"form-control" %></td>
      <td><%= f.label :last_name, "(名)" %> <%= f.text_field :last_name, autofocus: true, placeholder: "道子", class:"form-control" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ", class:"form-control" %></td>
      <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, autofocus: true, placeholder: "ミチコ", class:"form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class:"form-control"%></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td colspan="2"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木0-0", class:"form-control"%></td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number, "電話番号" %></td>
      <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "電話番号", class:"form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
      <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></td>
    </tr>
    <tr>
      <td></td>
      <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>
<% end %>

<h3>既に登録済みの方</h3>
  <p><%= link_to "こちら", new_customer_session_path, class: "underline" %>からログインしてください。</p>

</div>